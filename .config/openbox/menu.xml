<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">

    <menu id="apps-accessories" label="Accessories">
        <item label="Anydesk">
            <action name="Execute">
                <command>anydesk</command>
            </action>
        </item>
        <item label="Archive Manager">
            <action name="Execute">
                <command>file-roller</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="Bleachbit">
            <action name="Execute">
                <command>bleachbit</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="GParted">
            <action name="Execute">
                <command>gksudo gparted</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="Virtualbox">
            <action name="Execute">
                <command>virtualbox</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
    </menu>

    <menu id="apps-graphics" label="Graphics">
        <item label="Image Viewer">
            <action name="Execute">
                <command>shotwell</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="Krita">
            <action name="Execute">
                <command>krita</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="Snagit">
            <action name="Execute">
                <command>lightscreen</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
    </menu>

    <menu id="apps-network" label="Network">
        <item label="Discord">
            <action name="Execute">
                <command>discord</command>
            </action>
        </item>
        <item label="Mozilla Firefox">
            <action name="Execute">
                <command>firefox</command>
            </action>
        </item>
        <item label="Tor Browser">
            <action name="Execute">
                <command>tor-browser</command>
            </action>
        </item>
        <item label="Transmission">
            <action name="Execute">
                <command>transmission-gtk</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="Wireshark">
            <action name="Execute">
                <command>wireshark</command>
            </action>
        </item>
    </menu>

    <menu id="apps-office" label="Office">
        <item label="Libre Office">
            <action name="Execute">
                <command>libreoffice</command>
            </action>
        </item>
    </menu>

    <menu id="apps-programming" label="Programming">
        <item label="Radare2">
            <action name="Execute">
                <command>Cutter</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="Sublime Merge">
            <action name="Execute">
                <command>merge</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="Sublime Text">
            <action name="Execute">
                <command>subl</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
    </menu>

    <menu id="apps-multimedia" label="Multimedia">
        <item label="Popcorntime">
            <action name="Execute">
                <command>popcorntime</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="Steam">
            <action name="Execute">
                <command>steam</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="VLC">
            <action name="Execute">
                <command>vlc</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
    </menu>

    <menu id="apps-system" label="System">
        <item label="File Manager">
            <action name="Execute">
                <command>pcmanfm</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
        <item label="Terminal">
            <action name="Execute">
                <command>urxvt</command>
            </action>
        </item>
    </menu>

    <menu id="system-menu" label="System">
        <item label="Cups">
            <action name="Execute">
                <command>xdg-open http://localhost:631/</command>
                <startupnotify>
                    <enabled>no</enabled>
                    <icon>cups</icon>
                </startupnotify>
            </action>
        </item>
        <separator />
        <item label="Refresh Menu">
            <action name="Reconfigure" />
        </item>
    </menu>

    <menu id="root-menu" label="Openbox 3">
        <separator label="Apps" />
        <menu id="apps-accessories" />
        <menu id="apps-graphics" />
        <menu id="apps-network" />
        <menu id="apps-office" />
        <menu id="apps-programming" />
        <menu id="apps-multimedia" />
        <menu id="apps-system" />
        <separator label="System" />
        <menu id="system-menu" />
        <separator />
        <item label="Suspend">
            <action name="Execute">
                <command>systemctl suspend</command>
            </action>
        </item>
        <item label="Restart">
            <action name="Execute">
                <command>systemctl reboot</command>
            </action>
        </item>
        <item label="Shutdown">
            <action name="Execute">
                <command>systemctl poweroff</command>
            </action>
        </item>
    </menu>

</openbox_menu>
